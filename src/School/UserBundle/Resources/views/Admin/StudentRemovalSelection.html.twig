{% extends 'SchoolUserBundle::base.html.twig' %}

{% block title %} Remove Students From A Class {% endblock %}

{% block header_javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/schooluser/js/studentRemovalFromClass.js') }}"></script>
{% endblock %}

{% block body %}
{{ parent() }}
<div class="container-fluid">
    <h2> Remove students from class </h2> <br/>
    
    <h4> Selected Students to be removed </h4>
    
    <table class="table table-hover">
        <thead>
            <tr>
                <th> Name </th>
                <th> Class </th>
                <th> Year </th>
            </tr>
        </thead>
        
        {% for student in students %} 
        <tbody>   
            <tr>
                <td> {{ student.user.lastName }} {{ student.user.firstName }} </td>
                <td> {% if student.schoolClass is not null %} {{ student.schoolClass.name }} </td>
                <td> {{ student.schoolClass.schoolYear }} </td>
                {% endif %} 
            </tr>
        </tbody>
        {% endfor %} 
    </table>
    
    
    {{ form_start(form , {'attr': {'class': 'form-horizontal'}}) }}
    {{ form_errors(form) }}
    
    <div>
        {{ form_widget(form.Confirm, {'attr': {'class': 'btn btn-default'}}) }}
    </div>

    {{ form_end(form) }}

</div>
{% endblock %}