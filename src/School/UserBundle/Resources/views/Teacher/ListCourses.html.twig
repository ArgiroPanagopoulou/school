{% extends 'SchoolUserBundle::base.html.twig' %}

{% block title %} Courses{% endblock %}


{% block body %}
<div class="container-fluid">
    <div class="page-header">
        <h2> Courses </h2>
    </div>
    
    <div class="row">
        <div class="col-md-6">
            <dl class="dl-horizontal">
                {% for year, courses in grouped %}
                    <dt> {{ year }} </dt>
                    
                    <dd> <ul class="list-unstyled">
                        {% for course in courses %}
                            <li> {{ course.course.name }} - {{ course.class.name }} 
                                <a href="{{ path('teacher_list_exams', {'course_id': course.course.id, 'class_id': course.class.id}) }}"> Assign Exam 
                                    <span class="glyphicon glyphicon-pencil"> </span>
                                </a>
                            </li>
                        {% endfor %}
                        </ul>
                    </dd>
                {% endfor %}
            </dl>
        </div>
        
        <div class="col-md-6">
            <div class="well">
                
                <p class="text-left"> Choose a course from the list in order to assign an exam for the specific school class! </p>
            </div>
        </div>
    </div>
   
</div>
{% endblock %}