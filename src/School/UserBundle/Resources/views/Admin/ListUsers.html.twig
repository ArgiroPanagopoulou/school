{% extends 'SchoolUserBundle::base.html.twig' %}

{% block title %}List of Users{% endblock %}
{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <h2>List of Users</h2>
            <table class="table table-hover">
                    <tr>
                        <th>Username</th>
                        <th>Roles</th>
                    </tr>
                    
                        {% for u in users_view %}
                            <tr>
                            <td><a href="{{ path('admin_user_edit', {'userId': u.id }) }}"> {{u.username}}</a></td>
                             <td>   {{ u.name }} </td>
                                {# {% for r in u.role %}
                                <td>{{r.name}}</td>
                                {% endfor %} #}
                            
                            </tr>
                        {% endfor %}
            </table>
        </div>
        <div class="col-md-6"></div>
    </div>
</div>
{% endblock %}
 