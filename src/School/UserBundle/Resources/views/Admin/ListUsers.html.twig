{% extends 'SchoolUserBundle::base.html.twig' %}

{% block title %}List of Users{% endblock %}
{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <h2>List of Users</h2>
            <table class="table table-hover">
                    <tr>
                        <th> Last Name </th>
                        <th> First Name </th>
                        <th> Username </th>
                        <th> Role </th>
                        <th> </th>
                    </tr>
                    
                    {% for u in users %}
                        <tr>
                            <td> {{u.lastName}} </td>
                            <td> {{ u.firstName }} </td>
                            <td> {{ u.username }} </td>                            
                            <td> {% if u.role is not null %}  {{ u.role.name }} {% endif %}</td>
                            
                            <td> <a href="{{ path('user_edit', {'userId': u.id }) }}"> Edit </a></td>
                        </tr>
                    {% endfor %}
            </table>
        </div>
        <div class="col-md-6"></div>
    </div>
</div>
{% endblock %}
 