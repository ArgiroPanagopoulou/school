{% extends 'SchoolUserBundle::base.html.twig' %}

{% block title %}Assign Students To A Class{% endblock %}

{% block header_javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/schooluser/js/SchoolClassTest.js') }}"></script>
{% endblock %}

{% block body %}
{{ parent() }}
<div class="container-fluid">
    <div class="page-header">
        <h2> Assign students to a class </h2>
    </div>
    
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Selected Students </h3>
        </div>
        <div class="panel-body">
            {% for student in students %}    
                {{ student.user.lastName }} {{ student.user.firstName }} {% if student.schoolClass is not null %}
                    currently at: {{ student.schoolClass.name }}
                {% endif %} ,               
            {% endfor %}
        </div>
    </div>

    
    {{ form_start(form , {'attr': {'class': 'form-horizontal'}}) }}
    
    <div class="row">   
    <div class="col-md-8">      
    <div class="form-group">
        {{ form_label(form.schoolYear, 'School Year', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.schoolYear) }}
        <div class="col-sm-4">
            {{ form_widget(form.schoolYear, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    </div>
    </div>
    
    <div class="row">
    <div class="col-md-8"> 
    <div class="form-group">
        {{ form_label(form.name, 'School Class', {'label_attr': { 'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.name) }}
        <div class="col-sm-4">
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    </div>
    </div>
    
    <div class="row">
    <div class="col-md-4"> 
    <div class="form-group">
        <div class="col-sm-offset-1 col-sm-4">
            {{ form_widget(form.save, {'attr': {'class': 'btn btn-default'}}) }}
        </div>
    </div>
    </div>
    </div>
    
    {{ form_end(form) }}
    </div>
</div>
{% endblock %}