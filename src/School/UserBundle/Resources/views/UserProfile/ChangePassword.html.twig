{% extends 'SchoolUserBundle::base.html.twig' %}
{% form_theme form 'SchoolUserBundle:Form:form_errors.html.twig' %}

{% block title %} Change Password {% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="page-header">
        <h2> Change Password </h2>
    </div>
    
    {{ form_start(form, {'attr': {'class': 'form-horizontal' } }) }}
        {{ form_errors(form) }}
        
        <div class="form-group">
            {{ form_label(form.oldPassword, 'Old Password', {'label_attr': {'class': 'col-sm-2 control-label' } }) }}
            {{ form_errors(form.oldPassword) }}
            <div class="col-sm-2">
                {{ form_widget(form.oldPassword, {'attr': {'class': 'form-control' } }) }}
            </div>
        </div>
        
        <div class="form-group">
            {{ form_label(form.newPassword.newPassword, 'New Password', {'label_attr': {'class': 'col-sm-2 control-label' } }) }}
            {{ form_errors(form.newPassword.newPassword) }}
            <div class="col-sm-2">
                {{ form_widget(form.newPassword.newPassword, {'attr': {'class': 'form-control' } }) }}
            </div>
        </div>
        
        <div class="form-group">
            {{ form_label(form.newPassword.confirm, 'Confirm', {'label_attr': {'class': 'col-sm-2 control-label' } }) }}
            {{ form_errors(form.newPassword.confirm) }}
            <div class="col-sm-2">
                {{ form_widget(form.newPassword.confirm, {'attr': {'class': 'form-control' } }) }}
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-default'}}) }}
            </div>
        </div>
    
    {{ form_end(form) }}
</div>
{% endblock %}