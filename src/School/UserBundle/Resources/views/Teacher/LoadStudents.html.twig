{% extends 'SchoolUserBundle::base.html.twig' %}

{% block title %} Students {% endblock %}

{% block body %}
<div class="container-fluid">
            
    <h3> Students By Class</h3>
    
    
    <div class="panel-group" id="accordion">
        {% for school_class in classes %}           
            <div class="panel panel-default">
                
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#{{ school_class.id}}">
                        {{ school_class.name }}
                        </a>
                    </h4>
                </div>
            
                <div id="{{ school_class.id}}" class="panel-collapse collapse">
                    {% for student in school_class.students %}
                        <div class="panel-body">   
                            <a href="{{ path('teacher_student_profile', {'student_id': student.id }) }}"> {{ student.user.lastName }} {{ student.user.firstName }} </a>
                        </div>
                    {% endfor %}            
            </div>
        {% endfor %}
    </div>
  
</div>
{% endblock %}